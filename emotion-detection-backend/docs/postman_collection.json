{
    "info": {
        "name": "Emotion Detection API",
        "description": "API for detecting emotions from text using AI (LSTM for English, IndoBERT for Indonesian)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health & Status",
            "item": [
                {
                    "name": "Root",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/"
                    }
                },
                {
                    "name": "Health Check (English)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/health"
                    }
                },
                {
                    "name": "Health Check (Indonesian)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/health/id"
                    }
                },
                {
                    "name": "Get Emotions (English)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/emotions"
                    }
                },
                {
                    "name": "Get Emotions (Indonesian)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/emotions/id"
